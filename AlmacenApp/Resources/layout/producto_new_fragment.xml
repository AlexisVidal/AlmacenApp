
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/md_text_white"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:minWidth="150dp"
    android:minHeight="150dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/txtTileProductoFr">
        <TextView
            android:text="REGISTRO DE PRODUCTO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="20dp">
        <TextView
            android:text="TIPO:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductoFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileProductoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="95px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10px" />
        <Spinner
            android:id="@+id/spinner_tipo"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:prompt="@string/tipo_prompt"
            style="@android:style/Widget.Spinner"
            android:gravity="center"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <TextView
            android:text="MARCA:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileProductoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="80px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10px" />
        <Spinner
            android:id="@+id/spinner_marca"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:prompt="@string/marca_prompt"
            style="@android:style/Widget.Spinner"
            android:gravity="center"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <TextView
            android:text="MEDIDA: "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileProductoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="80px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10px" />
        <Spinner
            android:id="@+id/spinner_unidad"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:prompt="@string/unidad_prompt"
            style="@android:style/Widget.Spinner"
            android:gravity="center"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/txtTileProductoFr"
        android:id="@+id/ProductorOneFr">
        <TextView
            android:text="DESCRIPCION:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductoFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileProductoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="33dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20px" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_Producto"
            android:layout_width="500dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_Producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/hint_producto"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/ProductorOneFr"
        android:id="@+id/ProductorOne2Fr"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="CODIGO SKU:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtProductoFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileProductoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="43dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20px" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_SkuProducto"
            android:layout_width="500dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_SkuProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/hint_sku"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/ProductorOneFr"
        android:id="@+id/ProductorTwo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">
        <Button
            android:text="GUARDAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductorOne2Fr"
            android:id="@+id/btnGuardarProductoFrg"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/deletecustombutton"
            android:layout_marginRight="30dp" />
        <Button
            android:text="CANCELAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductorOne2Fr"
            android:id="@+id/btnCancelarNewProductoFrg"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/signincustombutton"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
</LinearLayout>