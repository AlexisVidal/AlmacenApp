
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical">
    <android.support.v4.widget.DrawerLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll">
        </LinearLayout>
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_grey_200"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">
                <TextView
                    android:text="ALMACEN: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" />
                <Spinner
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spAlmacenSimpleReporte"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                android:layout_marginRight="10dp"/>
                <Button
                    android:text="LIMPIAR"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnResetReporte"
                    android:background="@android:drawable/editbox_background"
                    android:drawableTop="@drawable/twoarrow40"
                    android:textColor="@color/md_black_1000"
                    android:layout_gravity="center"
                    android:gravity="center" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:text="SALIDAS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:text="PERSONAL"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginRight="5dp">
                    <ListView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rvsalidaRp"
                        android:background="@color/md_grey_200" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dp">
                    <ListView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rvpersonalSalidaRp"
                        android:background="@color/md_grey_200" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:weightSum="1"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.10"
                    android:minWidth="20px"
                    android:minHeight="25px"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="FECHA"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                    </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="PERSONAL"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="PRODUCTO"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="U. M."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="CANT"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.10"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="ALMACEN"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="20dp">
                <ListView
                    android:minWidth="45px"
                    android:minHeight="45px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rvpersonalMovimientosRp"
                    android:background="@color/md_grey_200" />
                <Refractored.Fab.FloatingActionButton
                    android:id="@+id/fabReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="16dp"
                    android:src="@drawable/print_icon80"
                    fab:fab_colorNormal="@color/accent"
                    fab:fab_colorPressed="#BF360C"
                    fab:fab_colorRipple="#FF80AB"
                    fab:fab_shadow="true"
                    android:enabled="false"/>
            </FrameLayout>
        </LinearLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_height="match_parent"
            android:layout_width="300dp"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>