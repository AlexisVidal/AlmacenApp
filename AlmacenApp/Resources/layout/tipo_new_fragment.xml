
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/md_text_white"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:minWidth="150dp"
    android:minHeight="150dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/txtTileTipoFr">
        <TextView
            android:text="REGISTRO DE TIPO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        android:layout_marginTop="20dp">
         <TextView
            android:text="LINEA:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttipoFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileTipoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:layout_marginRight="95px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10px" />
        <Spinner
            android:id="@+id/spinner_linea"
            android:layout_width="500dp"
            android:layout_height="?android:attr/actionBarSize"
            android:prompt="@string/linea_prompt"
            style="@android:style/Widget.Spinner"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/txtTileTipoFr"
        android:id="@+id/tiporOneFr"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="DESCRIPCION TIPO:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txttipoFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/txtTileTipoFr"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="20px" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt_tipo"
            android:layout_width="500dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="@string/hint_tipo"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/tiporOneFr"
        android:id="@+id/tiporTwo"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">
        <Button
            android:text="GUARDAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiporOneFr"
            android:id="@+id/btnGuardarTipoFrg"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/deletecustombutton"
            android:layout_marginRight="30dp" />
        <Button
            android:text="CANCELAR"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiporOneFr"
            android:id="@+id/btnCancelarNewTipoFrg"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="60dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/signincustombutton"
            android:layout_marginLeft="30dp" />
    </LinearLayout>
</LinearLayout>