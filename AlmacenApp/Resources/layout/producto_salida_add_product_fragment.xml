
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR ITEM A PERSONAL"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRABAJADOR: "
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/txtTrabajadorNombre"
            android:textSize="16dp"
            android:textStyle="normal"
            android:gravity="left"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearSearchProduct"
        android:background="@android:color/white"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginBottom="2dp">
        <EditText
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:id="@+id/edt_searchproductsListSalida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:textSize="18sp"
            android:hint="@string/hint_search"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:enabled="true" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:weightSum="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="COD"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="PRODUCTO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="U. M."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="TIPO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="CANT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvproductosSalida"
            android:background="@color/md_grey_200" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCTO: "
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="..."
            android:id="@+id/txtProductoSelected"
            android:textSize="16dp"
            android:textStyle="normal"
            android:gravity="left"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | CANT.: "
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edtCantxSalida"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:background="@android:drawable/editbox_background_normal"
            android:textColor="@android:color/black"
            android:inputType="number" />
        <Button
            android:text="+"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_below="@id/edtCantxI"
            android:id="@+id/btnCantSalida"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/signincustombutton" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:weightSum="1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="ID"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="COD."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="PRODUCTO"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="U. M."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal">
            <TextView
                android:text="CANT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#343434"
                android:layout_marginTop="10dp"
                android:typeface="normal"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/rvproductosSelectedSalida"
            android:background="@color/md_grey_200" />
    </LinearLayout>
<LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">
        <Button
                android:text="CERRAR"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearOne"
                android:id="@+id/btnCloseSIFrg"
                android:textSize="22dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:height="60dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/deletecustombutton"
                android:layout_marginRight="30dp" />
    </LinearLayout>
</LinearLayout>