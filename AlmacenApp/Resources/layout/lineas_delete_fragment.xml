<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/md_text_white"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minWidth="150dp"
    android:minHeight="150dp">
    <TextView
        android:text="ELIMINAR LINEA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtTileEliminarFrg"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/txtTileEliminarFrg"
        android:id="@+id/linearOne"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:text="LINEA:  "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtlineaFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/linearOne"
            android:gravity="left"
            android:layout_marginLeft="40px"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10px" />
        <TextView
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="fill_parent"
            android:id="@+id/txtDetallelineaFrg"
            android:layout_centerHorizontal="false"
            android:layout_alignParentLeft="false"
            android:layout_below="@id/linearOne"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />
    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_below="@id/linearOne"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@id/txtTileEliminarFrg"
            android:id="@+id/linearTwo"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp">
            <Button
                android:text="ELIMINAR"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearOne"
                android:id="@+id/btnDeleteLineaFrg"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:height="60dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/deletecustombutton"
                android:layout_marginRight="30dp" />
            <Button
                android:text="CANCELAR"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearOne"
                android:id="@+id/btnCancelarLineaFrg"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:height="60dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/signincustombutton"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>