
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearInventarioLayout"
    android:gravity="center_vertical|center_horizontal"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical">
    <android.support.v4.widget.DrawerLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ll">
        </LinearLayout>
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">
            <LinearLayout
                android:id="@+id/linearmainProducListIp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/md_grey_200"
                android:layout_margin="0dp"
                android:gravity="center">
                <Button
                    android:text="CARGA DATA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCargarDataIp"
                    android:drawableTop="@drawable/checklistred40"
                    android:elevation="6dp"
                    android:background="@android:drawable/editbox_background"
                    android:textColor="@color/md_black_1000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
                <Button
                    android:text="LIMPIAR"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnResetIp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableTop="@drawable/twoarrow40"
                    android:textColor="@color/md_black_1000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <Button
                    android:text="REGULARIZAR"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnRegularizaIp"
                    android:background="@android:drawable/editbox_background"
                    android:drawableTop="@drawable/uploaddata40"
                    android:textColor="@color/md_black_1000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearSearchProduct"
                android:background="@android:color/white"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_marginBottom="2dp">
                <EditText
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:id="@+id/edt_searchproductsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:hint="@string/hint_search"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:enabled="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:weightSum="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="COD"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="PRODUCTO"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="TIPO"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical|center_horizontal">
                    <TextView
                        android:text="CANT"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#343434"
                        android:layout_marginTop="10dp"
                        android:typeface="normal"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp">
                <ListView
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rvproductosIp"
                    android:background="@color/md_grey_200" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/md_grey_200"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:elevation="6dp">
                <TextView
                    android:text="ALMACEN: "
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewIp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="18sp" />
                <Spinner
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spAlmacenSimpleIp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    style="@android:style/Widget.Spinner"
                    android:gravity="center" />
                <Button
                    android:text="MOSTRAR PRODUCTOS"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/fabSimpleIp"
                    android:background="#1194f6"
                    android:layout_margin="7dp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearmainMainIp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:weightSum="3">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/linearListProductsAllIp"
                    android:orientation="vertical">
                    <ListView
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/listProductInventarioSimpleIp"
                        android:background="@color/md_grey_200" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_height="match_parent"
            android:layout_width="300dp"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header" />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout >